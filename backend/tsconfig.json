{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "rootDir": ".",
    "outDir": "build",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
      "resolvePackageJsonExports": true,
      "resolvePackageJsonImports": true,
    "skipLibCheck": true,
    "types": ["node"],

    "sourceMap": true
  },
  // "include": ["src", "migrations/20251202165454_task.cjs", "router", "router"],
  "exclude": ["node_modules"]
}
